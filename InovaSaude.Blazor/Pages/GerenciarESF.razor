@if (showModalEditFuncionario)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.7);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingFuncionario?.Id == null ? "Novo Funcion√°rio" : "Editar Funcion√°rio")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModalEditFuncionario"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingFuncionario" OnValidSubmit="SaveFuncionario">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="mb-3">
                            <label class="form-label">Nome *</label>
                            <InputText class="form-control" @bind-Value="editingFuncionario!.Nome" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cargo</label>
                            <InputText class="form-control" @bind-Value="editingFuncionario!.Cargo" placeholder="Ex: Enfermeiro, M√©dico, etc." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sal√°rio *</label>
                            <InputNumber class="form-control" @bind-Value="editingFuncionario!.Salario" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModalEditFuncionario">Cancelar</button>
                            <button type="submit" class="btn btn-primary">üíæ Salvar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ESF>? esfList;
    private List<Usuario>? coordenadores;
    private ESF? editingESF;
    private bool showModalESF = false;

    private bool showModalFuncionarios = false;
    private ESF? selectedESF;
    private List<Funcionario>? funcionariosList;

    private bool showModalEditFuncionario = false;
    private Funcionario? editingFuncionario;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        esfList = await ESFService.GetAllESFAsync();
        coordenadores = await ESFService.GetCoordenadoresDisponiveisAsync();
    }

    private void ShowModalESF(ESF? esf = null)
    {
        editingESF = esf ?? new ESF
        {
            Id = Guid.NewGuid().ToString(),
            Status = "ATIVA",
            CapacidadeAtendimento = 100,
            CreatedAt = DateTime.UtcNow
        };
        showModalESF = true;
    }

    private void CloseModalESF()
    {
        showModalESF = false;
        editingESF = null;
    }

    private async Task SaveESF()
    {
        if (editingESF == null) return;

        try
        {
            if (esfList?.Any(u => u.Id == editingESF.Id) == true)
            {
                await ESFService.UpdateESFAsync(editingESF);
            }
            else
            {
                await ESFService.CreateESFAsync(editingESF);
            }

            await LoadData();
            CloseModalESF();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao salvar UBS: {ex.Message}");
        }
    }

    private async Task DeleteESF(string id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Deseja realmente excluir esta ESF?");
        if (confirmed)
        {
            try
            {
                await ESFService.DeleteESFAsync(id);
                await LoadData();
            }
            catch (Exception ex)
            {
                var errorMsg = $"Erro ao excluir UBS: {ex.Message}";
                if (ex.InnerException != null)
                {
                    errorMsg += $"\n\nDetalhes: {ex.InnerException.Message}";
                }
                await JSRuntime.InvokeVoidAsync("alert", errorMsg);
                await JSRuntime.InvokeVoidAsync("console.error", "Erro completo:", ex.ToString());
            }
        }
    }

    private async Task ShowModalFuncionarios(ESF esf)
    {
        selectedESF = esf;
        funcionariosList = await FuncionarioService.GetByEsfIdAsync(esf.Id);
        showModalFuncionarios = true;
    }

    private void CloseModalFuncionarios()
    {
        showModalFuncionarios = false;
        selectedESF = null;
        funcionariosList = null;
    }

    private void ShowModalEditFuncionario(Funcionario? funcionario = null)
    {
        editingFuncionario = funcionario ?? new Funcionario
        {
            Id = Guid.NewGuid().ToString(),
            EsfId = selectedESF!.Id,
            CreatedAt = DateTime.UtcNow
        };
        showModalEditFuncionario = true;
    }

    private void CloseModalEditFuncionario()
    {
        showModalEditFuncionario = false;
        editingFuncionario = null;
    }

    private async Task SaveFuncionario()
    {
        if (editingFuncionario == null) return;

        try
        {
            if (funcionariosList?.Any(f => f.Id == editingFuncionario.Id) == true)
            {
                await FuncionarioService.UpdateAsync(editingFuncionario);
            }
            else
            {
                await FuncionarioService.CreateAsync(editingFuncionario);
            }

            funcionariosList = await FuncionarioService.GetByEsfIdAsync(selectedESF!.Id);
            CloseModalEditFuncionario();
        }
        catch (Exception ex)
        {
            var errorMsg = $"Erro ao salvar funcion√°rio: {ex.Message}";
            if (ex.InnerException != null)
            {
                errorMsg += $"\n\nDetalhes: {ex.InnerException.Message}";
            }
            await JSRuntime.InvokeVoidAsync("alert", errorMsg);
            await JSRuntime.InvokeVoidAsync("console.error", "Erro completo:", ex.ToString());
        }
    }

    private async Task DeleteFuncionario(string id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Deseja realmente excluir este funcion√°rio?");
        if (confirmed)
        {
            try
            {
                await FuncionarioService.DeleteAsync(id);
                funcionariosList = await FuncionarioService.GetByEsfIdAsync(selectedESF!.Id);
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Erro ao excluir funcion√°rio: {ex.Message}");
            }
        }
    }
}
