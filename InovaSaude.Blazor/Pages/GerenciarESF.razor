@page "/gerenciar-esf"
@using InovaSaude.Blazor.Services
@using InovaSaude.Blazor.Models
@inject ESFService ESFService
@inject FuncionarioService FuncionarioService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3>üè• Gerenciamento de ESF</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="() => ShowModalESF()">
                ‚ûï Nova ESF
            </button>
        </div>
    </div>

    @if (esfList == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var esf in esfList)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="text-center pt-3">
                            <img src="/images/esf-padrao.jfif" alt="@esf.Nome" class="rounded" style="width: 100%; max-width: 200px; height: 150px; object-fit: cover;" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@esf.Nome</h5>
                            <p class="text-muted mb-2">
                                <small>üìç C√≥digo: @esf.Codigo</small>
                            </p>
                            <p class="text-muted mb-2">
                                <small>üë§ Gestor: @(esf.Coordenador?.Nome ?? "Sem gestor")</small>
                            </p>
                            <p class="text-muted mb-2">
                                <small>üìû @(esf.Telefone ?? "Sem telefone")</small>
                            </p>
                            <p class="mb-2">
                                <span class="badge @(esf.Status == "ATIVA" ? "bg-success" : "bg-danger")">
                                    @esf.Status
                                </span>
                            </p>
                            <div class="d-flex gap-2 mt-3">
                                <button class="btn btn-sm btn-info flex-fill" @onclick="() => ShowModalESF(esf)">
                                    ‚úèÔ∏è Editar
                                </button>
                                <button class="btn btn-sm btn-primary flex-fill" @onclick="() => ShowModalFuncionarios(esf)">
                                    üë• Funcion√°rios
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteESF(esf.Id)">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModalESF)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingESF?.Id == null ? "Nova ESF" : "Editar ESF")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModalESF"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingESF" OnValidSubmit="SaveESF">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">C√≥digo *</label>
                                <InputText class="form-control" @bind-Value="editingESF!.Codigo" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome *</label>
                                <InputText class="form-control" @bind-Value="editingESF!.Nome" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Endere√ßo *</label>
                            <InputText class="form-control" @bind-Value="editingESF!.Endereco" />
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Telefone</label>
                                <InputText class="form-control" @bind-Value="editingESF!.Telefone" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Capacidade</label>
                                <InputNumber class="form-control" @bind-Value="editingESF!.CapacidadeAtendimento" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Status</label>
                                <InputSelect class="form-select" @bind-Value="editingESF!.Status">
                                    <option value="ATIVA">Ativa</option>
                                    <option value="INATIVA">Inativa</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Coordenador</label>
                            <InputSelect class="form-select" @bind-Value="editingESF!.CoordenadorId">
                                <option value="">Selecione...</option>
                                @if (coordenadores != null)
                                {
                                    @foreach (var coord in coordenadores)
                                    {
                                        <option value="@coord.Id">@coord.Nome</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModalESF">Cancelar</button>
                            <button type="submit" class="btn btn-primary">üíæ Salvar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModalFuncionarios)
{
