    </div>
}

@code {
    private List<UBS>? ubsList;
    private List<Usuario>? coordenadores;
    private UBS? editingUBS;
    private bool showModalUBS = false;

    private bool showModalFuncionarios = false;
    private UBS? selectedUBS;
    private List<Funcionario>? funcionariosList;

    private bool showModalEditFuncionario = false;
    private Funcionario? editingFuncionario;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        ubsList = await UBSService.GetAllUBSAsync();
        coordenadores = await UBSService.GetCoordenadoresDisponiveisAsync();
    }

    private void ShowModalUBS(UBS? ubs = null)
    {
        editingUBS = ubs ?? new UBS
        {
            Id = Guid.NewGuid().ToString(),
            Status = "ATIVA",
            CapacidadeAtendimento = 100,
            CreatedAt = DateTime.UtcNow
        };
        showModalUBS = true;
    }

    private void CloseModalUBS()
    {
        showModalUBS = false;
        editingUBS = null;
    }

    private async Task SaveUBS()
    {
        if (editingUBS == null) return;

        try
        {
            if (ubsList?.Any(u => u.Id == editingUBS.Id) == true)
            {
                await UBSService.UpdateUBSAsync(editingUBS);
            }
            else
            {
                await UBSService.CreateUBSAsync(editingUBS);
            }

            await LoadData();
            CloseModalUBS();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao salvar UBS: {ex.Message}");
        }
    }

    private async Task DeleteUBS(string id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Deseja realmente excluir esta UBS?");
        if (confirmed)
        {
            try
            {
                await UBSService.DeleteUBSAsync(id);
                await LoadData();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Erro ao excluir UBS: {ex.Message}");
            }
        }
    }

    private async Task ShowModalFuncionarios(UBS ubs)
    {
        selectedUBS = ubs;
        funcionariosList = await FuncionarioService.GetByUbsIdAsync(ubs.Id);
        showModalFuncionarios = true;
    }

    private void CloseModalFuncionarios()
    {
        showModalFuncionarios = false;
        selectedUBS = null;
        funcionariosList = null;
    }

    private void ShowModalEditFuncionario(Funcionario? funcionario = null)
    {
        editingFuncionario = funcionario ?? new Funcionario
        {
            Id = Guid.NewGuid().ToString(),
            UbsId = selectedUBS!.Id,
            CreatedAt = DateTime.UtcNow
        };
        showModalEditFuncionario = true;
    }

    private void CloseModalEditFuncionario()
    {
        showModalEditFuncionario = false;
        editingFuncionario = null;
    }

    private async Task SaveFuncionario()
    {
        if (editingFuncionario == null) return;

        try
        {
            if (funcionariosList?.Any(f => f.Id == editingFuncionario.Id) == true)
            {
                await FuncionarioService.UpdateAsync(editingFuncionario);
            }
            else
            {
                await FuncionarioService.CreateAsync(editingFuncionario);
            }

            funcionariosList = await FuncionarioService.GetByUbsIdAsync(selectedUBS!.Id);
            CloseModalEditFuncionario();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Erro ao salvar funcion√°rio: {ex.Message}");
        }
    }

    private async Task DeleteFuncionario(string id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Deseja realmente excluir este funcion√°rio?");
        if (confirmed)
        {
            try
            {
                await FuncionarioService.DeleteAsync(id);
                funcionariosList = await FuncionarioService.GetByUbsIdAsync(selectedUBS!.Id);
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Erro ao excluir funcion√°rio: {ex.Message}");
            }
        }
    }
}
