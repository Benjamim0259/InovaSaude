@page "/gerenciar-ubs"
@using InovaSaude.Blazor.Services
@using InovaSaude.Blazor.Models
@inject UBSService UBSService
@inject FuncionarioService FuncionarioService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3>üè• Gerenciamento de UBS</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="() => ShowModalUBS()">
                ‚ûï Nova UBS
            </button>
        </div>
    </div>

    @if (ubsList == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var ubs in ubsList)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="text-center pt-3">
                            <img src="/images/ubs-padrao.jfif" alt="@ubs.Nome" class="rounded" style="width: 100%; max-width: 200px; height: 150px; object-fit: cover;" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@ubs.Nome</h5>
                            <p class="text-muted mb-2">
                                <small>üìç C√≥digo: @ubs.Codigo</small>
                            </p>
                            <p class="text-muted mb-2">
                                <small>üë§ Gestor: @(ubs.Coordenador?.Nome ?? "Sem gestor")</small>
                            </p>
                            <p class="text-muted mb-2">
                                <small>üìû @(ubs.Telefone ?? "Sem telefone")</small>
                            </p>
                            <p class="mb-2">
                                <span class="badge @(ubs.Status == "ATIVA" ? "bg-success" : "bg-danger")">
                                    @ubs.Status
                                </span>
                            </p>
                            <div class="d-flex gap-2 mt-3">
                                <button class="btn btn-sm btn-info flex-fill" @onclick="() => ShowModalUBS(ubs)">
                                    ‚úèÔ∏è Editar
                                </button>
                                <button class="btn btn-sm btn-primary flex-fill" @onclick="() => ShowModalFuncionarios(ubs)">
                                    üë• Funcion√°rios
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteUBS(ubs.Id)">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModalUBS)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingUBS?.Id == null ? "Nova UBS" : "Editar UBS")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModalUBS"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingUBS" OnValidSubmit="SaveUBS">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">C√≥digo *</label>
                                <InputText class="form-control" @bind-Value="editingUBS!.Codigo" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome *</label>
                                <InputText class="form-control" @bind-Value="editingUBS!.Nome" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Endere√ßo *</label>
                            <InputText class="form-control" @bind-Value="editingUBS!.Endereco" />
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Telefone</label>
                                <InputText class="form-control" @bind-Value="editingUBS!.Telefone" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Capacidade</label>
                                <InputNumber class="form-control" @bind-Value="editingUBS!.CapacidadeAtendimento" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Status</label>
                                <InputSelect class="form-select" @bind-Value="editingUBS!.Status">
                                    <option value="ATIVA">Ativa</option>
                                    <option value="INATIVA">Inativa</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Coordenador</label>
                            <InputSelect class="form-select" @bind-Value="editingUBS!.CoordenadorId">
                                <option value="">Selecione...</option>
                                @if (coordenadores != null)
                                {
                                    @foreach (var coord in coordenadores)
                                    {
                                        <option value="@coord.Id">@coord.Nome</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModalUBS">Cancelar</button>
                            <button type="submit" class="btn btn-primary">üíæ Salvar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModalFuncionarios)
{
