@inherits LayoutComponentBase

<PageTitle>InovaSaúde - Sistema de Gestão Financeira</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 bg-light border-bottom">
            <AuthorizeView>
                <Authorized>
                    <span class="text-muted">Bem-vindo, <strong>@context.User.Identity?.Name</strong></span>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="btn btn-sm btn-primary">Fazer Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
